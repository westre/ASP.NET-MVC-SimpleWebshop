@model WindesheimWebshop.ViewModels.ProductViewModel

@{
    //Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div>     
        <div class="row">
            <div class="col-sm-12">
                <h2>@Model.Product.Naam</h2>
            </div>
        </div>
        
        <div class="row">
            <div class="col-sm-3">
                <img class="product-photo" src="@Model.Product.Plaatje" alt="pimg" />
            </div>
            <div class="col-sm-9">
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-striped">
                            <tr><td>Omschrijving</td><td>@Model.Product.Omschrijving</td></tr>
                            <tr><td>Prijs</td><td>@Model.Product.Prijs</td></tr>
                        </table>
                    </div>
                    <div class="col-sm-12">
                    @if (Model.Aanbieding != null) {
                        <table class="table table-striped">
                            <tr><td>Aanbieding</td><td>@Model.Aanbieding.DatumVan - @Model.Aanbieding.DatumTot</td></tr>
                            <tr><td>Omschrijving</td><td>@Model.Aanbieding.ReclameTekst</td></tr>
                            <tr><td>Prijs</td><td>@Model.Aanbieding.Aanbiedingsprijs</td></tr>
                        </table>
                    }
                    </div> 
                </div> 
                <div class="row">
                    <div class="col-sm-2">
                        <select class="form-control" id="product-amount">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>
                    <div class="col-sm-10">
                        <button type="button" class="btn btn-default btn-lg" id="product-add" data-pid="@Model.Product.ID">
                            <span class="glyphicon glyphicon-star" aria-hidden="true"></span> Bestellen
                        </button>
                    </div>
                </div>             
            </div>
        </div>
    </div>
</body>
</html>
